# Optimizely Content Graph Configuration
OPTIMIZELY_GRAPH_GATEWAY=https://cg.optimizely.com/content/v2
OPTIMIZELY_GRAPH_SINGLE_KEY=your_single_key_here

# Preview Mode (required for draft content)
# These enable HMAC authentication for accessing unpublished content
OPTIMIZELY_GRAPH_APP_KEY=your_app_key_here
OPTIMIZELY_GRAPH_SECRET=your_secret_here

# Optimizely CMS URL (required for preview communication)
# Replace [UUID] with your instance's ID
OPTIMIZELY_CMS_URL=https://app-[UUID].cms.optimizely.com

# Webhook Configuration
# PUBLIC_URL is required for webhook registration (your server's public URL)
PUBLIC_URL=https://your-domain.com
# Optional: Secret for validating incoming webhook requests
WEBHOOK_SECRET=your_webhook_secret_here

# Server Configuration
PORT=8080
PREVIEW_PORT=3001

# Optimizely CMS CLI Configuration
OPTIMIZELY_CMS_CLIENT_ID=your_client_id_here
OPTIMIZELY_CMS_CLIENT_SECRET=your_client_secret_here
